{
  "compilerOptions": {
    "outDir": "./dist/", // Директория для выходных файлов
    "noImplicitAny": true, // Запрет неявного приведения типов к any
    "module": "esnext", // Использование ES6 модулей
    "target": "es5", // Компиляция в ES5
    "jsx": "react-jsx", // Обработка JSX для React
    "allowJs": true, // Разрешение компиляции .js файлов
    "moduleResolution": "node", // Стратегия разрешения модулей, аналогичная Node.js
    "baseUrl": ".", // Для абсолютного импорта
    "paths": {
      "*": ["./src/*"]
    },
    "esModuleInterop": true, // Совместимость с ES6 модулями
    "allowSyntheticDefaultImports": true // Разрешение импорта модулей без export default
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS" // Использование CommonJS модулей для ts-node
    }
  }
}
